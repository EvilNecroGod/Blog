<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    
    <div class="mb-3">
        <label for="titleArea" class="form-label">Title</label>
        <input type="text" class="form-control" name="composeTitle">
    </div>
    <div class="mb-3">
        <label for="postArea" class="form-label">Post</label>
        <textarea class="form-control" name="composePost" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>